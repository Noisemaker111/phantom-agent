{
  "manifest_version": 3,
  "name": "Phantom Agent",
  "version": "0.1.0",
  "description": "Natural language control over your Phantom embedded wallet.",

  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
    },
    "default_title": "Phantom Agent"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "identity",
    "sidePanel",
    "activeTab"
  ],

  "host_permissions": [
    "https://connect.phantom.app/*",
    "https://*.convex.cloud/*",
    "https://*.convex.site/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.html", "*.png", "*.svg", "*.woff2"],
      "matches": ["<all_urls>"]
    }
  ]
}
